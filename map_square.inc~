define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"
  #color "green"

  # most maps will need a bounding box
  boundary 1

  gui_nose 0
  gui_grid 1
  gui_movemask 0
  gui_outline 0
  gripper_return 0
  fiducial_return 0
  laser_return 1
)



model
(
  bitmap "bitmaps/gas1.png"
  pose [4 0 0]
  size [2.0 2.0]
  origin [0 0 0]
  velocity [0 0 0]

  # body color
  color "orange" 
boundary 0
  # determine how the model appears in various sensors

  obstacle_return 0
  laser_return 0
  ranger_return 0
 blobfinder_return 0
  fiducial_return 0
  gripper_return 0
  fiducial_key 0

  # GUI properties
  gui_nose 0
  gui_grid 0
 gui_boundary 0
)

model
