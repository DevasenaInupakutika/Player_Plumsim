  # body color
  color "red" 
boundary 0
  # determine how the model appears in various sensors

  obstacle_return 0
  laser_return 0
  ranger_return 0
 blobfinder_return 0
  fiducial_return 0
  gripper_return 0
  fiducial_key 0

  # GUI properties
  gui_nose 0
  gui_grid 0
 gui_boundary 0
)


