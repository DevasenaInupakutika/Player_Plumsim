floorplan
( 
  bitmap "bitmaps/square1.png"
  size [41 24 1]
  name "map1"
)

# create a robot
erratic
(
  name "robot1"
  color "red"
  pose [-19 -11 0 0]
  sicklaser()
#  erratic_sonar()
)

